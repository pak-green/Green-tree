<script>
function resetAdmin(){
  var username = document.getElementById("username").value;

  if(username !== "admin"){
    alert("Username not found ‚ùå");
    return;
  }

  var tempPass = "tree123"; // Demo password
  alert("Admin password is: " + tempPass + "\nUse this to login.");
}
