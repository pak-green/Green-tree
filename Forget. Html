<div class="box">
  <h2>Forgot Password</h2>
  <input type="email" id="email" placeholder="Enter your registered email">
  <button onclick="resetPassword()">Reset Password</button>
  <p>Back to <a href="login.html">Login</a></p>
</div>

<script>
function resetPassword(){
  var email = document.getElementById("email").value;
  var users = JSON.parse(localStorage.getItem("users") || "[]");

  var userIndex = users.findIndex(u => u.email === email);

  if(userIndex === -1){
    alert("Email not found ‚ùå");
    return;
  }

  // Generate temporary password
  var tempPass = Math.random().toString(36).slice(-8); // 8 char
  users[userIndex].password = tempPass;
  localStorage.setItem("users", JSON.stringify(users));

  alert("Temporary password: " + tempPass + "\nUse this to login.");
}
</script>

