<div class="box">
  <h2>Welcome ðŸŒ³</h2>
  <p id="userInfo"></p>
  <button onclick="logout()">Logout</button>
</div>

<script>
var users = JSON.parse(localStorage.getItem("users") || "[]");
var currentCode = localStorage.getItem("currentUser");
var user = users.find(u => u.myCode === currentCode);

if(!user){
  window.location.href = "login.html";
}

document.getElementById("userInfo").innerHTML =
  `Name: ${user.name}<br>
   Email: ${user.email}<br>
   Tree: ${user.tree}<br>
   Investment: Rs ${user.amount}<br>
   Referral Code: ${user.myCode}<br>
   Referral Used: ${user.referralUsed || 'None'}`;

function logout(){
  localStorage.removeItem("currentUser");
  window.location.href = "login.html";
}
</script>

</body>
</html>